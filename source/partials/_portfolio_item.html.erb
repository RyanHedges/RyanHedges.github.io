<article class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0'>
  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>
      <a href="<%= project_link %>">
          <div <%= image.css if image.css != nil %>>
            <%= image_tag "#{image.name}", class: "img-responsive center-block" %>
          </div>
      </a>

      <p><%= description %></p>

      <% unless github_link.link.nil? %>
        <div class='github-link'>
          <p><a href="<%= github_link.link %>"><%= github_link.text %></a></p>
        </div>
      <% end %>
    </div>
  </div>
</article>

