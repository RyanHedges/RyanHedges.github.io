---
pageable: true
per_page: 3
---

<% if paginate && num_pages > 1 %>
  <p>page <%= page_number %> of <%= num_pages %></p>
  <% if prev_page %>
    <p><%= link_to 'previous page', prev_page %></p>
  <% end %>
<% end %>

paginate is set to <%= paginate.inspect %>
<% if paginate%>
HELLOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOOj
<% end %>
<% page_articles.each_with_index do |article, i| %>
  <article class="row" data-file-path=<%= article.destination_path %> data-target-element="article" >
    <h2 class="col-xs-12 article-link"><%= link_to article.title, article %></h2>
    <time class="col-xs-12 col-sm-7"><%= article.date.strftime('%A %B %e, %Y') %></time>
    <span class="eta col-sm-5"></span>
    <span class="col-xs-12">
      <% article.tags.each do |tag| %>
        <%= tag_link(article, tag) %>
      <% end %>
    </span>
  <!-- use article.summary(250) if you have nokogiri available to show just the first 250 characters --> 
    <div class="article-summary">
      <%= article.summary %>
      <%= link_to 'Keep reading...', article %>
    </div>
  </article>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'next page', next_page %></p>
  <% end %>
<% end %>

